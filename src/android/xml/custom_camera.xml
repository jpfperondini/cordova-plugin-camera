<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".camera.CustomCameraActivity">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/flipCamera"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:background="@drawable/btn_flip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/captureButton"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/btn_shot"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/flashButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_flash_no"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewfinderArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="125dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewfinder"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:background="@drawable/viewfinder"/>

    </RelativeLayout>

</RelativeLayout>
