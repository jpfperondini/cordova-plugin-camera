<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_camera_preview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

    <android.view.SurfaceView
        android:id="@+id/surface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/flashButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_flash_no"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/captureButton"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/btn_shot"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/flipCamera"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:background="@drawable/btn_flip"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewfinderArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="125dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewfinder"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:background="@drawable/viewfinder"/>

    </RelativeLayout>

</RelativeLayout>